generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(uuid())
  provider     AuthProvider
  providerSub  String
  email        String       @unique
  role         Role         @default(USER)
  refreshToken String?
  createdAt    DateTime     @default(now())

  factCheckSessions FactCheckSession[]

  @@unique([provider, providerSub])
}

enum AuthProvider {
  GOOGLE
}

enum Role {
  USER
  ADMIN
}

model YoutubeVideo {
  id           String   @id @default(uuid())
  title        String
  channelId    String   @unique
  channelName  String
  thumbnailUrl String
  publishedAt  DateTime
  updatedAt    DateTime @updatedAt
}

enum ContentType {
  YOUTUBE_VIDEO
}

model FactCheckSession {
  id          Int         @id @default(autoincrement())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  contentType ContentType
  contentId   String

  claimVerifications ClaimVerification[]
  claims             Claim[]

  @@unique([contentType, contentId])
}

model Claim {
  id                 String           @id @default(uuid())
  factCheckSessionId Int
  faactCheckSession  FactCheckSession @relation(fields: [factCheckSessionId], references: [id])
  index              Int
  content            String
  detectionReason    String
  createdAt          DateTime         @default(now())

  claimVerifications ClaimVerification[]
}

model ClaimVerification {
  id                 String           @id @default(uuid())
  factCheckSessionId Int
  factCheckSession   FactCheckSession @relation(fields: [factCheckSessionId], references: [id])
  claimId            String
  claim              Claim            @relation(fields: [claimId], references: [id])
  verdict            Verdict
  verdictReason      String
  evidence           Json
  createdAt          DateTime         @default(now())
}

enum Verdict {
  TRUE
  MOSTLY_TRUE
  MIXED
  MOSTLY_FALSE
  FALSE
  UNKNOWN
}
